@page "/login"
@model Alfasoft.ContactManager.Pages.Login
@{
    ViewData["Title"] = "Login";
}

<div class="bg-white shadow-md rounded-lg p-6 max-w-md mx-auto">
    <h2 class="text-2xl font-bold text-gray-800 mb-6 text-center">Login</h2>
    
    <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm mb-4 bg-red-100 border-red-500 p-4"></div>
    
    <form method="post" class="space-y-4">
        <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Username</label>
            <input asp-for="@Model.UserLogin!.Username"
                   type="text" 
                   id="username" 
                   class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
            <span class="text-sm text-red-500 inline-block mt-2" asp-validation-for="@Model.UserLogin!.Username"></span>
        </div>
        <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Password</label>
            <input asp-for="@Model.UserLogin!.Password"
                   type="password" 
                   id="password" 
                   class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
            <span class="text-sm text-red-500 inline-block mt-2" asp-validation-for="@Model.UserLogin!.Password"></span>
        </div>
        <div id="loginError" class="text-red-500 text-sm hidden"></div>
        <div class="flex flex-col gap-3 pt-4">
            <button type="submit" class="bg-blue-500 text-center hover:bg-blue-600 text-white px-6 py-2 rounded-lg transition w-full">
                Login
            </button>
            <a asp-page="Default" class="bg-gray-500 hover:bg-gray-600 text-white text-center px-6 py-2 rounded-lg transition w-full">
                Back to Contacts
            </a>
        </div>
        <div class="mt-4 p-4 bg-blue-50 border border-blue-200 rounded-lg">
            <p class="text-sm text-gray-600"><strong>Demo credentials:</strong></p>
            <p class="text-sm text-gray-600">Username: admin</p>
            <p class="text-sm text-gray-600">Password: admin</p>
        </div>
        <input type="hidden" asp-for="@Model.ReturnUrl" />
        @Html.AntiForgeryToken()
    </form>
</div>