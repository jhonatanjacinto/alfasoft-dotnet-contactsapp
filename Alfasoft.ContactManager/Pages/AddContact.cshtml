@page "/new-contact"
@model Alfasoft.ContactManager.Pages.AddContact

<div class="bg-white shadow-md rounded-lg p-6 max-w-2xl mx-auto">
    <h2 class="text-2xl font-bold text-gray-800 mb-6">Add New Contact</h2>
    
    <div asp-validation-summary="ModelOnly" class="text-red-600 mb-4 bg-red-100 border-red-600 p-4"></div>
    
    @if (TempData["SuccessMessage"] is not null)
    {
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
            @TempData["SuccessMessage"]
        </div>
    }
    
    <form method="post" class="space-y-4">
        <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Name</label>
            <input asp-for="@Model.CreateContactData!.Name"
                   type="text" 
                   id="newName" 
                   class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
            <span asp-validation-for="@Model.CreateContactData!.Name" class="text-red-600 text-sm"></span>
        </div>
        <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Phone</label>
            <input asp-for="@Model.CreateContactData!.PhoneNumber"
                   type="tel" 
                   id="newPhone" 
                   class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
            <span asp-validation-for="@Model.CreateContactData!.PhoneNumber" class="text-red-600 text-sm"></span>
        </div>
        <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Email</label>
            <input asp-for="@Model.CreateContactData!.Email"
                   type="text" 
                   id="newEmail" 
                   class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
            <span asp-validation-for="@Model.CreateContactData!.Email" class="text-red-600 text-sm"></span>
        </div>
        <div class="flex gap-4 pt-4">
            <button type="submit" class="bg-green-500 hover:bg-green-600 text-white px-6 py-2 rounded-lg transition">
                Save Contact
            </button>
            <a asp-page="Default" type="button" class="bg-gray-500 hover:bg-gray-600 text-white px-6 py-2 rounded-lg transition">
                Cancel
            </a>
        </div>
        @Html.AntiForgeryToken()
    </form>
</div>