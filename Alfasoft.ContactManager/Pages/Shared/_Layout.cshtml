<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contacts Manager | @ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen">
<div id="app" class="container mx-auto px-4 py-8">
    
    <!-- Header -->
    <header class="bg-white shadow-md rounded-lg p-6 mb-8">
        <div class="flex justify-between items-center">
            <h1 class="text-3xl font-bold text-gray-800">Contacts Manager</h1>
            <div id="authSection">
                @if (User.Identity is { IsAuthenticated: false })
                {
                    <a asp-page="Login" class="bg-blue-500 hover:bg-blue-600 text-white px-6 py-2 rounded-lg transition">
                        Login to Manage Contacts
                    </a>
                }
                else
                {
                    <button class="bg-red-500 hover:bg-red-600 text-white px-6 py-2 rounded-lg transition">
                        Logout
                    </button>
                }
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main id="mainContent">
        @RenderBody()
    </main>
    
</div>
</body>
</html>